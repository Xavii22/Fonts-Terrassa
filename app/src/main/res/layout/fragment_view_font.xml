<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".viewFontFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/star_transperencia_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_trasperencia"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/btnBack"
            style="@style/btnBackStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/star_transperencia_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_trasperencia"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_olor_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_olor"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_olor_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_olor"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <TextView
            android:id="@+id/txt_informacio"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="20dp"
            android:text="Aqui tenim tota l'informaci贸 de la font que es vulgui afegir des de l'administraci贸."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_informacio" />

        <Button
            android:id="@+id/btn_testWater"
            android:layout_width="72dp"
            android:layout_height="102dp"
            android:layout_marginTop="2dp"
            android:text="CHECK"
            app:layout_constraintBottom_toBottomOf="@+id/star_transperencia_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/star_olor_5"
            app:layout_constraintTop_toTopOf="@+id/star_gust_5" />

        <ImageView
            android:id="@+id/img_accesibilitat"
            android:layout_width="47dp"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="225dp"
            android:src="@drawable/ic_baseline_emoji_people_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_font" />

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="327dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_font" />

        <ImageView
            android:id="@+id/star_olor_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_olor"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_gust_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txtgust"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_gust_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txtgust"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_gust_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txtgust"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <TextView
            android:id="@+id/txt_nom_font"
            android:layout_width="273dp"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Nom Font"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_font"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_nom_font"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_titol_valoracio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Valoraci贸 Mitjana"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/img_check"
            app:layout_constraintTop_toBottomOf="@+id/img_font" />

        <TextView
            android:id="@+id/txt_titol_accesibilitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="232dp"
            android:text="Accesibilitat"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/img_accesibilitat"
            app:layout_constraintTop_toBottomOf="@+id/img_font" />

        <TextView
            android:id="@+id/txt_titol_informacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="339dp"
            android:text="Informaci贸"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/img_info"
            app:layout_constraintTop_toBottomOf="@+id/img_font" />

        <ImageView
