            app:layout_constraintTop_toBottomOf="@+id/img_font" />

        <TextView
            android:id="@+id/txt_trasperencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="105dp"
            android:text="Transperencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <TextView
            android:id="@+id/txt_olor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="65dp"
            android:text="Olor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <TextView
            android:id="@+id/txtgust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="25dp"
            android:text="Gust"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_gust_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txtgust"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_olor_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_olor"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_transperencia_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_trasperencia"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_transperencia_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_trasperencia"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_transperencia_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_trasperencia"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_olor_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txt_olor"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/star_gust_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toEndOf="@+id/txtgust"
            app:layout_constraintTop_toBottomOf="@+id/txt_titol_valoracio" />

        <ImageView
            android:id="@+id/btn_goToMaps"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_map_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_informacio" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
