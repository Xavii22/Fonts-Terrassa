<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EvaluateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="380dp"
        android:layout_height="720dp">

        <ImageView
            android:id="@+id/star_gust_val3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_starempty"
            app:layout_constraintStart_toEndOf="@+id/star_gust_val2"
            app:layout_constraintTop_toBottomOf="@+id/test_gust" />

        <ImageView
            android:id="@+id/star_gust_val1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_starempty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_gust" />

        <ImageView
            android:id="@+id/star_gust_val5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_starempty"
            app:layout_constraintStart_toEndOf="@+id/star_gust_val4"
            app:layout_constraintTop_toBottomOf="@+id/test_gust" />

        <ImageView
            android:id="@+id/star_gust_val4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_starempty"
            app:layout_constraintStart_toEndOf="@+id/star_gust_val3"
            app:layout_constraintTop_toBottomOf="@+id/test_gust" />

        <ImageView
            android:id="@+id/star_gust_val2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_starempty"
            app:layout_constraintStart_toEndOf="@+id/star_gust_val1"
            app:layout_constraintTop_toBottomOf="@+id/test_gust" />

        <ImageButton
            android:id="@+id/btn_evaluate"
            android:layout_width="63dp"
            android:layout_height="52dp"
            android:layout_marginBottom="115dp"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/test_gust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="70dp"
            android:text="1. Puntua el gust de l'1 al 5"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/test_olor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="100dp"
            android:text="2. Puntual l'olor de l'1 al 5"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_gust" />

        <TextView
            android:id="@+id/test_transperencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="100dp"
            android:text="3. Puntua la transperencia de l'aigua de l'1 al 5"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_olor" />

        <Spinner
            android:id="@+id/spinner_olor"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="25dp"
            android:entries="@array/spinner_testOneToFive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_olor" />

        <Spinner
            android:id="@+id/spinner_transperencia"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="25dp"
            android:entries="@array/spinner_testOneToFive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_transperencia" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>