<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AdminFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/mainBackground">

            <TextView
                android:id="@+id/txt_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/dashboard"
                android:textColor="@color/textColor"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/adminUsers"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/administrar_usuaris"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/adminFonts"
                app:layout_constraintTop_toBottomOf="@+id/txt_admin" />

            <Button
                android:id="@+id/adminFonts"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="51dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/administrar_fonts"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/adminUsers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_admin" />


            <Button
                android:id="@+id/createFonts"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="51dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/crear_fonts"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/createUsers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminFonts" />

            <Button
                android:id="@+id/createUsers"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/crear_usuaris"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/createFonts"
                app:layout_constraintTop_toBottomOf="@+id/adminUsers" />

            <Button
                android:id="@+id/sessionCloseButton"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/tancar_sessio"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/createUsers" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>